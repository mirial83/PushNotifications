{
  "name": "push-notifications-installer",
  "version": "1.0.0",
  "description": "Full installer for Push Notifications client",
  "main": "scripts/main.js",
  "author": "Lauren Streich",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "dependencies": {
    "electron": "^38.1.2"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.pushnotifications.installer",
    "productName": "Push Notifications Installer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*"
    ]
  }
}